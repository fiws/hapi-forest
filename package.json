{
  "name": "hapi-forest",
  "version": "0.8.0",
  "description": "A hapi plugin to generate routes based on mongoose models",
  "main": "forest.js",
  "scripts": {
    "test": "npm run lint . && nyc  --check-coverage --lines 50 ava",
    "lint": "eslint --ignore-path .gitignore .",
    "lint-staged": "lint-staged",
    "example": "nodemon ./example/server.js"
  },
  "lint-staged": {
    "*.js": "eslint"
  },
  "pre-commit": [
    "lint-staged"
  ],
  "keywords": [
    "hapi-plugin",
    "rest",
    "crud",
    "mongoose",
    "route",
    "generation"
  ],
  "author": "Filip Weiss <me@fiws.net>",
  "repository": {
    "type": "git",
    "url": "https://github.com/fiws/hapi-forest"
  },
  "bugs": {
    "url": "https://github.com/fiws/hapi-forest/issues"
  },
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "@hapi/call": "^8.0.0",
    "@hapi/hoek": "^9.0.4",
    "@hapi/joi": "^15.1.1",
    "JSONStream": "^1.1.4",
    "lodash": "^4.15.0"
  },
  "peerDependencies": {
    "@hapi/hapi": ">= 19.0.0",
    "mongoose": "^5.2.9"
  },
  "devDependencies": {
    "@hapi/hapi": "^19.1.1",
    "ava": "^0.17.0",
    "blipp": "^3.0.0",
    "eslint": "^4.13.1",
    "eslint-plugin-ava": "^4.0.0",
    "hapi-swagger": "^8.0.0",
    "inert": "^5.0.1",
    "lint-staged": "^6.0.0",
    "make-promises-safe": "^1.1.0",
    "mongoose": "^5.4.8",
    "nodemon": "^1.13.3",
    "nyc": "^11.3.0",
    "pre-commit": "^1.1.3",
    "vision": "^5.2.0"
  }
}
